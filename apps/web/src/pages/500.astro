---
import Layout from '../layouts/Layout.astro';
---

<Layout title="500 - Server Error">
  <section class="error-page error-page--dark">
    <div class="error-content">
      <div class="error-code">
        <span class="error-number">5</span>
        <span class="error-number error-number--accent">0</span>
        <span class="error-number">0</span>
      </div>

      <div class="error-info">
        <span class="tag-brutal tag-brutal--yellow">SERVER ERROR</span>
        <h1>SOMETHING BROKE</h1>
        <p>Our servers encountered an unexpected error. We're working on fixing it.</p>

        <div class="error-actions">
          <a href="/" class="btn-brutal btn-brutal--yellow">
            GO HOME â†’
          </a>
          <button onclick="location.reload()" class="btn-brutal btn-brutal--outline">
            TRY AGAIN
          </button>
        </div>
      </div>
    </div>

    <div class="error-decoration error-decoration--1"></div>
    <div class="error-decoration error-decoration--2"></div>
  </section>
</Layout>
