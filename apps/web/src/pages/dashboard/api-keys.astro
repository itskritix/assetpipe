---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="API Keys">
  <div class="mx-auto max-w-4xl px-4 py-12">
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900">API Keys</h1>
      <p class="mt-2 text-gray-600">Manage your API keys for programmatic access.</p>
    </div>

    <div class="mb-6 rounded-xl border bg-white p-6">
      <h2 class="mb-4 text-lg font-semibold text-gray-900">Create New API Key</h2>
      <form id="create-key-form" class="flex gap-4">
        <input
          type="text"
          id="key-name"
          placeholder="Key name (e.g., Production)"
          class="flex-1 rounded-lg border border-gray-300 px-4 py-2 focus:border-brand-500 focus:outline-none focus:ring-2 focus:ring-brand-200"
        />
        <button
          type="submit"
          class="rounded-lg bg-brand-600 px-6 py-2 font-medium text-white transition hover:bg-brand-700"
        >
          Create Key
        </button>
      </form>
    </div>

    <div id="new-key-display" class="mb-6 hidden rounded-xl border-2 border-green-500 bg-green-50 p-6">
      <div class="flex items-start gap-3">
        <svg class="h-6 w-6 flex-shrink-0 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div class="flex-1">
          <h3 class="font-semibold text-green-800">API Key Created!</h3>
          <p class="mt-1 text-sm text-green-700">
            Copy this key now. You won't be able to see it again.
          </p>
          <div class="mt-3 flex items-center gap-2">
            <code id="new-key-value" class="flex-1 rounded bg-white px-3 py-2 font-mono text-sm"></code>
            <button
              id="copy-key-btn"
              class="rounded-lg bg-green-600 px-4 py-2 text-sm font-medium text-white transition hover:bg-green-700"
            >
              Copy
            </button>
          </div>
        </div>
      </div>
    </div>

    <div id="loading" class="text-center py-8">
      <div class="inline-block h-8 w-8 animate-spin rounded-full border-4 border-brand-600 border-r-transparent"></div>
    </div>

    <div id="keys-list" class="hidden space-y-4"></div>

    <div id="empty-state" class="hidden text-center py-8">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
      </svg>
      <h3 class="mt-4 text-lg font-medium text-gray-900">No API keys yet</h3>
      <p class="mt-2 text-gray-600">Create your first API key to get started.</p>
    </div>

    <div class="mt-8 rounded-xl bg-gray-100 p-6">
      <h2 class="mb-4 text-lg font-semibold text-gray-900">Using Your API Key</h2>
      <p class="mb-4 text-gray-600">Include your API key in the Authorization header:</p>
      <pre class="overflow-x-auto rounded-lg bg-gray-900 p-4 text-sm text-gray-100"><code>curl -H "Authorization: Bearer YOUR_API_KEY" \
  https://api.assetpipe.com/v1/companies</code></pre>
    </div>
  </div>
</Layout>

<script>
  import { createClient } from '@supabase/supabase-js';

  const supabaseUrl = import.meta.env.PUBLIC_SUPABASE_URL;
  const supabaseAnonKey = import.meta.env.PUBLIC_SUPABASE_ANON_KEY;
  const supabase = createClient(supabaseUrl, supabaseAnonKey);

  const loading = document.getElementById('loading');
  const emptyState = document.getElementById('empty-state');
  const keysList = document.getElementById('keys-list');
  const newKeyDisplay = document.getElementById('new-key-display');
  const newKeyValue = document.getElementById('new-key-value');
  const copyKeyBtn = document.getElementById('copy-key-btn');

  // Check if user is logged in
  const { data: { user } } = await supabase.auth.getUser();

  if (!user) {
    window.location.href = '/login';
  }

  async function loadKeys() {
    const { data: keys, error } = await supabase
      .from('api_keys')
      .select('id, name, is_active, request_count, last_used_at, created_at')
      .order('created_at', { ascending: false });

    loading?.classList.add('hidden');

    if (error) {
      console.error('Error fetching keys:', error);
      return;
    }

    if (!keys || keys.length === 0) {
      emptyState?.classList.remove('hidden');
      keysList?.classList.add('hidden');
    } else {
      emptyState?.classList.add('hidden');
      keysList?.classList.remove('hidden');

      keysList!.innerHTML = keys.map((key) => `
        <div class="rounded-xl border bg-white p-6">
          <div class="flex items-start justify-between">
            <div>
              <h3 class="font-semibold text-gray-900">${key.name || 'Unnamed Key'}</h3>
              <p class="text-sm text-gray-500">
                Created ${new Date(key.created_at).toLocaleDateString()}
              </p>
            </div>
            <div class="flex items-center gap-3">
              <span class="rounded-full px-3 py-1 text-xs font-medium ${key.is_active ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-700'}">
                ${key.is_active ? 'Active' : 'Inactive'}
              </span>
              <button
                data-key-id="${key.id}"
                class="delete-key-btn rounded-lg border border-red-300 px-3 py-1 text-sm text-red-600 transition hover:bg-red-50"
              >
                Delete
              </button>
            </div>
          </div>
          <div class="mt-4 flex items-center gap-6 text-sm text-gray-500">
            <span>${key.request_count || 0} requests</span>
            ${key.last_used_at ? `<span>Last used ${new Date(key.last_used_at).toLocaleDateString()}</span>` : '<span>Never used</span>'}
          </div>
        </div>
      `).join('');

      // Attach delete handlers
      document.querySelectorAll('.delete-key-btn').forEach((btn) => {
        btn.addEventListener('click', async (e) => {
          const button = e.target as HTMLButtonElement;
          if (button.disabled) return;

          const keyId = button.dataset.keyId;
          if (confirm('Are you sure you want to delete this API key?')) {
            button.disabled = true;
            button.textContent = 'Deleting...';

            const { error } = await supabase.from('api_keys').delete().eq('id', keyId);

            if (error) {
              alert('Failed to delete API key: ' + error.message);
              button.disabled = false;
              button.textContent = 'Delete';
              return;
            }

            loadKeys();
          }
        });
      });
    }
  }

  loadKeys();

  // Generate a secure random API key
  function generateApiKey(): string {
    const chars = 'ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
    const array = new Uint8Array(32);
    crypto.getRandomValues(array);
    return 'ap_' + Array.from(array, (b) => chars[b % chars.length]).join('');
  }

  // Simple hash function for client-side (in production, hash server-side)
  async function hashKey(key: string): Promise<string> {
    const encoder = new TextEncoder();
    const data = encoder.encode(key);
    const hashBuffer = await crypto.subtle.digest('SHA-256', data);
    const hashArray = Array.from(new Uint8Array(hashBuffer));
    return hashArray.map((b) => b.toString(16).padStart(2, '0')).join('');
  }

  // Create key form handler
  let isCreatingKey = false;
  const createForm = document.getElementById('create-key-form');
  const createBtn = createForm?.querySelector('button[type="submit"]') as HTMLButtonElement;

  createForm?.addEventListener('submit', async (e) => {
    e.preventDefault();

    if (isCreatingKey) return;
    isCreatingKey = true;

    const originalText = createBtn.textContent;
    createBtn.disabled = true;
    createBtn.textContent = 'Creating...';

    const nameInput = document.getElementById('key-name') as HTMLInputElement;
    const name = nameInput.value.trim();

    const apiKey = generateApiKey();
    const keyHash = await hashKey(apiKey);

    const { error } = await supabase.from('api_keys').insert({
      user_id: user!.id,
      name: name || null,
      key_hash: keyHash,
    });

    if (error) {
      alert('Failed to create API key: ' + error.message);
      isCreatingKey = false;
      createBtn.disabled = false;
      createBtn.textContent = originalText;
      return;
    }

    // Show the new key
    newKeyValue!.textContent = apiKey;
    newKeyDisplay?.classList.remove('hidden');
    nameInput.value = '';

    isCreatingKey = false;
    createBtn.disabled = false;
    createBtn.textContent = originalText;

    // Reload the list
    loadKeys();
  });

  // Copy key button
  copyKeyBtn?.addEventListener('click', () => {
    const key = newKeyValue?.textContent;
    if (key) {
      navigator.clipboard.writeText(key);
      copyKeyBtn.textContent = 'Copied!';
      setTimeout(() => {
        copyKeyBtn.textContent = 'Copy';
      }, 2000);
    }
  });
</script>
