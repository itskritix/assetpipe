---
import Layout from '../layouts/Layout.astro';
---

<Layout title="404 - Not Found">
  <section class="error-page">
    <div class="error-content">
      <div class="error-code">
        <span class="error-number">4</span>
        <span class="error-number error-number--accent">0</span>
        <span class="error-number">4</span>
      </div>

      <div class="error-info">
        <span class="tag-brutal tag-brutal--red">ERROR</span>
        <h1>PAGE NOT FOUND</h1>
        <p>The page you're looking for doesn't exist or has been moved.</p>

        <div class="error-actions">
          <a href="/" class="btn-brutal btn-brutal--yellow">
            GO HOME â†’
          </a>
          <a href="/browse" class="btn-brutal btn-brutal--outline">
            BROWSE LOGOS
          </a>
        </div>
      </div>
    </div>

    <div class="error-decoration error-decoration--1"></div>
    <div class="error-decoration error-decoration--2"></div>
  </section>
</Layout>
