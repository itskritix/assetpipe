---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
  <div class="flex min-h-[60vh] items-center justify-center px-4">
    <div class="text-center">
      <h1 class="text-9xl font-bold text-brand-600">404</h1>
      <h2 class="mt-4 text-2xl font-semibold text-gray-900">Page Not Found</h2>
      <p class="mt-2 text-gray-600">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="mt-8 flex flex-col items-center gap-4 sm:flex-row sm:justify-center">
        <a
          href="/"
          class="rounded-lg bg-brand-600 px-6 py-3 font-medium text-white transition hover:bg-brand-700"
        >
          Go Home
        </a>
        <a
          href="/browse"
          class="rounded-lg border border-gray-300 px-6 py-3 font-medium text-gray-700 transition hover:bg-gray-50"
        >
          Browse Logos
        </a>
      </div>
    </div>
  </div>
</Layout>
